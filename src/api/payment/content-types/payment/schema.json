{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "amount": {
      "type": "biginteger",
      "min": "100"
    },
    "payment_id": {
      "type": "string"
    },
    "order_id": {
      "type": "string"
    },
    "condition": {
      "type": "enumeration",
      "enum": [
        "created",
        "paid",
        "failed"
      ]
    },
    "login": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::login.login",
      "inversedBy": "payments"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "payment"
    },
    "cart": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::cart.cart"
    }
  }
}
